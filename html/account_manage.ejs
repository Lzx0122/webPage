<html>

<head>
    <meta charset="UTF-8" />
    </meta>
    <title>主頁</title>
    <link href="../css/account-manage.css" rel="stylesheet" type="text/css">
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p"
        crossorigin="anonymous"></script>
</head>

<body style="background-color: lightcyan;">

    <div class="table-wrapper">
        <form class="table-form">
            <h3>人員清單</h3>
            <Table id="table" class="account-table">
                <tr id="header-tr">
                    <th scope="col">員工帳號</td>
                    <th scope="col">密碼</td>
                    <th scope="col">員工姓名</td>
                    <th scope="col">權限</td>
                    <th scope="col">部門</td>
                    <th scope="col">職業</td>

                </tr>
                <%try{%>


                    <%for(var i=0 ; i< Table.length ; i++){%>
                        <tr>
                            <td>
                                <%-Table[i].account%>
                            </td>
                            <td>
                                <%-Table[i].password%>
                            </td>
                            <td>
                                <%-Table[i].Name%>
                            </td>
                            <td>
                                <%-Table[i].permission%>
                            </td>
                            <td>
                                <%-Table[i].Division%>
                            </td>
                            <td>
                                <%-Table[i].Profession%>
                            </td>

                        </tr>
                        <%}%>
                            <%}catch(e){%>
                                <%console.log(e)%>
                                    <%}%>
            </Table>


        </form>

    </div>
    <div class="CRUD-wrapper">
        <form class="CRUD-form">
            <h3>新增｜修改｜刪除</h3>
            <Table id='CRUD' class="CRUD-table">
                <tr>
                    <th scope="col">員工帳號</td>
                    <th scope="col">密碼</td>
                    <th scope="col">員工姓名</td>
                    <th scope="col">權限</td>
                    <th scope="col">部門</td>
                    <th scope="col">職業</td>
                </tr>

                <tr>
                    <td>
                        <input id='account' type="text">
                    </td>
                    <td>
                        <input id='password' type="text">
                    </td>
                    <td>
                        <input id='Name' type="text">
                    </td>
                    <td>
                        <input id='permission' type="text">
                    </td>
                    <td>
                        <input id='Division' type="text">
                    </td>
                    <td>
                        <input id='Profession' type="text">
                    </td>
                </tr>

            </Table>
            <input type="button" value="新增" name="" class="add-btn">
            <input type="button" value="修改" name="" class="update-btn">
            <input type="button" value="刪除" name="" class="delete-btn">

        </form>

    </div>
    <script src="../script/JavaScript.js"></script>
</body>

</html>