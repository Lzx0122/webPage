<html>

<head>
    <meta charset="UTF-8" />
    </meta>
    <title>主頁</title>
    <link href="../css/account-manage.css" rel="stylesheet" type="text/css">
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p"
        crossorigin="anonymous"></script>
</head>

<body style="background-color: lightcyan;">

    <div class="table-wrapper">
        <form class="table-form">
            <h3>人員清單</h3>
            <Table id="table" class="account-table">
                <tr id="header-tr">
                    <th scope="col">員工帳號</td>
                    <th scope="col">密碼</td>
                    <th scope="col">員工姓名</td>
                    <th scope="col">權限</td>
                    <th scope="col">部門</td>
                    <th scope="col">職業</td>
                    <th scope="col">到職日</td>
                    <th scope="col">投保薪資</th>

                </tr>
                <%try{%>
                    <%for(var i=0 ; i< Table.length ; i++){%>
                        <tr>
                            <td>
                                <%-Table[i].account%>
                            </td>
                            <td>
                                <%-Table[i].password%>
                            </td>
                            <td>
                                <%-Table[i].Name%>
                            </td>
                            <td>
                                <%-Table[i].permission%>
                            </td>
                            <td>
                                <%-Table[i].Division%>
                            </td>
                            <td>
                                <%-Table[i].Profession%>
                            </td>
                            <td>
                                <%-Table[i].onboardDate%>
                            </td>
                            <td>
                                <%-Table[i].InsuredSalary%>
                            </td>

                        </tr>
                        <%}%>
                            <%}catch(e){%>
                                <%console.log(e)%>
                                    <%}%>
            </Table>


        </form>

    </div>
    <div class="CRUD-wrapper">
        <form class="CRUD-form" method="POST" action="/CRUD-employee-Form">
            <h3>新增｜修改｜刪除</h3>
            <Table id='CRUD' class="CRUD-table">
                <tr>
                    <th scope="col">員工帳號</td>
                    <th scope="col">密碼</td>
                    <th scope="col">員工姓名</td>
                    <th scope="col">權限</td>
                        <!-- <th scope="col">部門</td> -->
                    <th scope="col">職業</td>
                    <th scope="col">到職日</td>
                    <th scope="col">投保薪資</td>
                    <th scope="col">備註</td>

                </tr>
                <tr>
                    <td>
                        <input id='account' type="text" name="account">
                    </td>
                    <td>
                        <input id='password' type="text" name="password">
                    </td>
                    <td>
                        <input id='Name' type="text" name="Name">
                    </td>
                    <!-- <td>
                        <input id='permission' type="text" name="permission">
                    </td> -->
                    <td>
                        <select type='text' name="permission" id='permission'>

                            <option value="個人資料,借資">個人資料,借資</option>
                            <option value="個人資料,帳號管理,借資">個人資料,帳號管理,借資</option>
                        </select>
                    </td>
                    <!-- <td>
                        <input id='Division' type="text" name="Division">
                    </td> -->
                    <!-- <td>
                        <input id='Profession' type="text" name="Profession">
                    </td> -->
                    <td>
                        <select type='text' name="Profession" id='Profession'>
                            <option value="員工">員工</option>
                            <option value="老闆">老闆</option>

                        </select>
                    </td>
                    <td>
                        <input id='onboardDate' type="text" name="onboardDate">
                    </td>
                    <td>
                        <input id='InsuredSalary' type="text" name="InsuredSalary">
                    </td>
                    <td>
                        <input id='note' type="text" name="note">
                    </td>
                </tr>

            </Table>
            <button type="submit" value="add" name="vote" class="add-btn">新增</button>
            <button type="submit" value="update" name="vote" class="update-btn">修改</button>
            <button type="submit" value="delete" name="vote" class="delete-btn">刪除</button>
            <button type="submit" value="req-add" name="vote" class="add-btn">請求新增</button>
            <button type="submit" value="req-delete" name="vote" class="delete-btn">請求刪除</button>

        </form>

    </div>
    <script src="../script/JavaScript.js"></script>
</body>

</html>